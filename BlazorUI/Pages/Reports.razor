@page "/reports"
@using Data.Services.Interfaces
@using ManagingSelfFinanceWebAPI.Models
@inject IService<Report> ReportService

<h1>Report</h1>
<p></p>
<p>
    <label>
        <EditForm Model="@CurrentDate">
            <InputDate @bind-Value="@CurrentDate.InputDateStart" @bind-Value:format="dd-MM-yyyy" />
        </EditForm>
    </label>
    <br />
    <label>
        <EditForm Model="@CurrentDate">
            <InputDate @bind-Value="@CurrentDate.InputDateEnd" @bind-Value:format="dd-MM-yyyy" />
        </EditForm>
    </label>
    <button @onclick="OnInitializedAsync">
        Update date
    </button>
</p>
<p>
    <code>Date Start</code>: @CurrentDate.InputDateStart.ToString("dd.MM.yyyy")
    <code>Date End</code>: @CurrentDate.InputDateEnd.ToString("dd.MM.yyyy")
</p>

@code {
    DateStart CurrentDate = new DateStart();
    public class DateStart
    {
        public DateTime InputDateStart { get; set; } = DateTime.Today;
        public DateTime InputDateEnd { get; set; } = DateTime.Today;
    }
}

@if (reports == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Transaction</th>
                <th>Name</th>
                <th>Type Transaction</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in reports)
            {
                if (item.Id == 0)
                {
                    <tr style="background-color:#808080;">
                        <td></td>
                        <td></td>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>@item.Amount</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Date.ToString("dd.MM.yyyy")</td>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
@code {
    private IEnumerable<Report> reports { get; set; } = new List<Report>();
    protected override async Task OnInitializedAsync()
    {
        reports = await ReportService.GetReportAsync(CurrentDate.InputDateStart.Date, CurrentDate.InputDateEnd.Date);
    }
}